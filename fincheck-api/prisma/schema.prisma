generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  income
  expense
}

enum UserRole {
  user
  ADMIN
  DEV
}

model User {
  id           String        @id @default(cuid())
  name         String
  email        String        @unique
  password     String
  role         UserRole      @default(user) // ðŸ‘ˆ padrÃ£o
  transactions Transaction[]
  Category     Category[]
}


model Transaction {
  id         String           @id @default(cuid())
  title      String
  amount     Float
  type       TransactionType  // Usando o enum aqui
  createdAt  DateTime         @default(now())
  userId     String    
  user       User             @relation(fields: [userId], references: [id])
  categoryId String?
  category   Category?        @relation(fields: [categoryId], references: [id])
}

model Category {
  id           String        @id @default(cuid())
  name         String
  transactions Transaction[]
  userId       String
  user         User          @relation(fields: [userId], references: [id])
}


